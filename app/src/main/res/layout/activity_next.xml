<?xml version="1.0" encoding="utf-8"?>


<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#95EFCE"
        tools:context="com.example.admin.myquizapp.NextActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keybord and mouse are"
            android:textSize="24sp"
            android:textColor="#1C4648"
            android:layout_marginBottom="25dp"/>

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/answer"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_devices"
                android:text=" Input Devices"
                android:textSize="24sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/output_devices"
                android:text="Output Devices"
                android:textSize="24sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lock_devices"
                android:text="Lock Devices"
                android:textSize="24sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/non_above"
                android:text="None of Above"
                android:textSize="24sp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A display screen that provides a visual output is called"
            android:textStyle="normal"
            android:textColor="#1C4648"
            android:textSize="24sp"
            android:layout_marginBottom="25dp"/>

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/results"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Keyboard"
                android:id="@+id/keyboard"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mouse"
                android:id="@+id/mouse"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Monitor"
                android:id="@+id/monitor"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" System box"
                android:id="@+id/systembox"
                android:textSize="24sp"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What language do computers understand"
            android:textStyle="normal"
            android:textColor="#1C4648"
            android:textSize="24sp"
            android:layout_marginBottom="25dp"/>

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:id="@+id/question3">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" C++ Language"
                android:id="@+id/cplus"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Java Language"
                android:id="@+id/java"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SQL Language"
                android:id="@+id/sql"
                android:textSize="24sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Binary Language"
                android:id="@+id/binary"
                android:textSize="24sp"/>


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An error that occur when a program does not do what the programmer expects it to do"
            android:textStyle="normal"
            android:textColor="#1C4648"
            android:textSize="24sp"
            android:layout_marginBottom="25dp"/>

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:id="@+id/question4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Syntax error"
                android:textSize="24sp"
                android:id="@+id/syntax"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Logical error"
                android:textSize="24sp"
                android:id="@+id/logical"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Semantic error"
                android:textSize="24sp"
                android:id="@+id/semantic"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" All of the above"
                android:textSize="24sp"
                android:id="@+id/all_above"/>

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which of the following is the example of a pointing devices"
            android:textStyle="normal"
            android:textColor="#1C4648"
            android:textSize="24sp"
            android:layout_marginBottom="25dp"/>


        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:id="@+id/question5">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mouse"
                android:textSize="24sp"
                android:id="@+id/mouse_pointer"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Finger on touch screen"
                android:textSize="24sp"
                android:id="@+id/finger"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Touchpad"
                android:textSize="24sp"
                android:id="@+id/touchpad"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" All of the above"
                android:textSize="24sp"
                android:id="@+id/all_above1"/>

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:textColor="#1C4648"
            android:textSize="24sp"
            android:layout_marginBottom="40dp"/>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retry"
                android:background="@drawable/customize_button"
                android:onClick="retry"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="results"
                android:onClick="onClick"
                android:background="@drawable/customize_button"
                android:id="@+id/results1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exit"
                android:id="@+id/exit"
                android:background="@drawable/customize_button"
                android:onClick="exit"/>
        </LinearLayout>





    </LinearLayout>
</ScrollView>